{
  "name": "peerit-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Anonymous peer evaluation platform - microservices monorepo",
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "migration:create": "node tools/create-migration.js"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.2",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Peerit Team",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/peerit.git"
  },
  "keywords": [
    "peer-evaluation", 
    "microservices",
    "anonymous-reviews",
    "student-assessment",
    "education"
  ]
}
