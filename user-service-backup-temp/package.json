{
  "name": "peerit-user-service",
  "version": "1.0.0",
  "private": true,
  "description": "User profiles, roles, and team membership management service for Peerit platform",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit/ --verbose",
    "test:basic": "npm run test:unit",
    "test:integration": "cross-env NODE_ENV=test TEST_INTEGRATION=true jest tests/integration/infrastructure.test.js --testTimeout=10000 --forceExit --verbose",
    "test:watch": "cross-env NODE_ENV=test jest tests/unit/ --watch",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "prisma migrate dev",
    "db:migrate:new": "prisma migrate dev --create-only",
    "db:reset": "prisma migrate reset",
    "db:seed": "node src/scripts/seed.js",
    "db:generate": "prisma generate"
  },
  "main": "src/index.js",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-actuator": "^1.8.4",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "morgan": "^1.10.0",
    "prisma": "^5.22.0",
    "redis": "^4.7.1",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "yamljs": "^0.3.0",
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@types/jest": "^29.5.14",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "user-management",
    "profiles",
    "roles",
    "teams",
    "microservice",
    "express",
    "peerit"
  ]
}
