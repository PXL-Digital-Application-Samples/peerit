{
  "name": "peerit-auth-service",
  "version": "1.0.0",
  "private": true,
  "description": "Authentication and session management service for Peerit platform",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "cross-env NODE_ENV=test SKIP_REDIS=true jest",
    "test:basic": "cross-env NODE_ENV=test SKIP_REDIS=true jest tests/unit/database.service.test.js tests/integration/auth.basic.test.js",
    "test:redis": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test SKIP_REDIS=true jest --watch",
    "test:integration": "cross-env NODE_ENV=test jest --testMatch='**/tests/integration/**/*.test.js'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "prisma migrate dev",
    "db:migrate:new": "prisma migrate dev --create-only",
    "db:reset": "prisma migrate reset",
    "db:seed": "node src/scripts/seed.js",
    "db:generate": "prisma generate"
  },
  "main": "src/index.js",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-actuator": "^1.8.4",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prisma": "^5.22.0",
    "redis": "^4.7.1",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@types/jest": "^29.5.14",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "authentication",
    "jwt",
    "microservice",
    "express",
    "peerit"
  ]
}
