# Keycloak Development Environment Configuration
# This file contains declarative configuration for Keycloak setup

# Keycloak Admin Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Database Configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=keycloak

# Keycloak Development Settings
KC_HOSTNAME=localhost
KC_HTTP_PORT=8080
KC_HTTP_ENABLED=true
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false
KC_LOG_LEVEL=INFO

# Network and Ports
KEYCLOAK_PORT=8080
POSTGRES_PORT=5433

# Realm Configuration
KC_REALM_NAME=peerit
KC_IMPORT_REALM=/opt/keycloak/data/import/peerit-realm.json

# Development Users (defined in realm configuration)
# Admin: admin@peerit.local / admin123
# Teacher: teacher1@peerit.local / teacher123  
# Students: student1-3@peerit.local / student123
