                  "        pm.expect(clients).to.be.an('array');",
                  "        ",
                  "        const clientIds = clients.map(client => client.clientId);",
                  "        pm.expect(clientIds).to.include('peerit-frontend');",
                  "        pm.expect(clientIds).to.include('peerit-api');",
