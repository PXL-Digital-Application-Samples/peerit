                  "    if (pm.response.code === 200) {",
                  "        pm.response.to.have.status(200);",
                  "    } else {",
                  "        pm.test.skip('Admin token not valid for Peerit realm');",
                  "    }",
                  "});",
                  "",
                  "pm.test('Clients list contains Peerit applications', () => {",
                  "    if (pm.response.code === 200) {",
