  "smtpServer": {
    "port": "587",
    "host": "localhost",
    "fromDisplayName": "Peerit Platform",
    "from": "noreply@peerit.local",
    "auth": false,
    "ssl": false,
    "starttls": false
  },
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging"],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR", 
    "LOGOUT",
    "REGISTER",
    "REGISTER_ERROR",
    "UPDATE_PASSWORD",
