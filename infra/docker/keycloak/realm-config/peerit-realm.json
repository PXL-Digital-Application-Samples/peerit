      {
        "client": "peerit-frontend",
        "roles": ["view-profile", "manage-account"]
      }
    ]
  },
  "scopeMappings": [
    {
      "client": "peerit-api",
      "roles": ["admin", "teacher", "student"]
    },
    {
      "client": "peerit-services", 
      "roles": ["admin", "teacher", "student"]
